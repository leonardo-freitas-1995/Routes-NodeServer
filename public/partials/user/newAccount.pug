md-dialog.newAccount-dialog(aria-label="New Task", md-theme="highlight")
    form(name="dialog.newAccountForm")
        md-toolbar
            .md-toolbar-tools
                h2(translate="index.newAccount")
        md-dialog-content
            .md-dialog-content(layout="column")
                md-content(layout-padding, layout="column")
                    md-input-container
                        label(translate="profile.email")
                        input(type="email", name="email", ng-model="dialog.email", required, md-no-asterisk)
                        div(ng-messages="dialog.newAccountForm.email.$error")
                            div(ng-message="required", translate="index.errors.required")
                            div(ng-message="email", translate="index.errors.invalidEmail")

                    md-input-container
                        label(translate="profile.name")
                        input(type="text", name="name", ng-model="dialog.name", required, md-no-asterisk)
                        div(ng-messages="dialog.newAccountForm.name.$error")
                            div(ng-message="required", translate="index.errors.required")

                    md-input-container
                        label(translate="profile.password")
                        input(type="password", name="password", ng-model="dialog.password", minlength="6")
                        div(ng-messages="dialog.newAccountForm.password.$error")
                            div(ng-message="minlength", translate="profile.minPassword")

                    md-input-container
                        label(translate="profile.repeatPassword")
                        input(type="password", name="repeatPassword", ng-model="dialog.repeatPassword",
                        minlength="6", ng-match="dialog.password")
                        div(ng-messages="dialog.newAccountForm.repeatPassword.$error")
                            div(ng-message="minlength", translate="profile.minPassword")
                            div(ng-message="match", translate="profile.matchPassword")

        md-dialog-actions(layout="row")
            md-button.md-raised(ng-click="dialog.cancel()")
                span(translate="common.cancel")
            md-button.md-raised.md-primary(ng-click="dialog.create()")
                span(translate="common.create")